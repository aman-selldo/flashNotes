<div class="container">
  <h2>Edit Paragraph</h2>

  <%= form_with model: [@chapter.subject, @chapter ,@paragraph], local: true do |f| %>
    <div class="mb-3">
      <%= f.label :title, "Paragraph Title", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :content, "Content", class: "form-label" %>
      <%= f.text_area :content, class: "form-control", rows: 5, required: true %>
    </div>

    <%= f.submit "Update Paragraph", class: "btn btn-success" %>
    <%= link_to "Cancel", subject_chapter_paragraph_path(@chapter.subject, @chapter, @paragraph), class: "btn btn-secondary" %>
  <% end %>
</div>
