.drop-position {
  position: relative;
}
.drop-position:hover {
  z-index: 9999;
}

.drop-z_index {
  z-index: 999999;
}

.card-text-hint {
    margin-top: 12px;
    font-size: 0.9em;
    font-style: italic;
    opacity: 0.7;
    <%# text-align: center; %>
}

</style>