<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Chapters in <%= @subject.name %></h2>

    <div class="d-flex">
      <%= form_with url: subject_chapters_path(@subject), method: :get, local: true, class: "me-2 d-flex", id: "search-form" do |f| %>
        <%= f.text_field :search, value: params[:search], placeholder: "Search Chapters...", 
        class: "form-control me-2", id: "search-input" %>
        <%= f.submit "Search", class: "btn btn-outline-primary", id: "search-button" %>
      <% end %>
      
      <button type="button" class="btn btn-primary new-subject-btn" data-bs-toggle="modal" data-bs-target="#newChapterModal">
        New Chapter
      </button>
    </div>
  </div>

  <% if @chapters.any? %>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-3 g-4">
      <% @chapters.each do |chapter| %>
        <% random_light_color = "hsl(#{rand(360)}, #{rand(30..50)}%, #{rand(85..95)}%)" %>
        <div class="col">
          <div class="card clickable-card subject-card h-100 shadow-sm" style="background-color: <%= random_light_color %>;">
            <div class="card-body d-flex flex-column"
                onclick="window.location.href='<%= subject_chapter_paragraphs_path(@subject, chapter) %>'">
              <h5 class="card-title fw-bold mb-2 text-center">
                <%= chapter.name %>
              </h5>
              <p class="card-text flex-grow-1 text-center"><%= truncate(chapter.description, length: 50 ) %></p>
              <span class="badge rounded-pill align-self-center <%= label_badge_class(chapter.label) %>"><%= default_label(chapter.label) %></span>
            </div>
            <div class="card-options position-absolute" style="top: 8px; right: 8px;">
              <div class="dropdown">
                <button class="btn btn-sm btn-light rounded-circle" type="button" id="dropdownMenuButton<%= chapter.id %>" data-bs-toggle="dropdown" aria-expanded="false" data-dropdown-id="dropdownMenu<%= chapter.id %>">
                  <i class="bi bi-three-dots"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow-sm" id="dropdownMenu<%= chapter.id %>" aria-labelledby="dropdownMenuButton<%= chapter.id %>">
                  <li><button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#editChapterModal<%= chapter.id %>">Edit</button></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= button_to "Delete", subject_chapter_path(@subject, chapter), method: :delete, 
                          class: "dropdown-item text-danger",
                          data: {turbo: false, confirm: "Are you sure you want to delete this chapter?"} %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Edit Chapter Modal -->
        <div class="modal fade" id="editChapterModal<%= chapter.id %>" tabindex="-1"
            aria-labelledby="editChapterModalLabel<%= chapter.id %>" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="editChapterModalLabel<%= chapter.id %>">Edit Chapter</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <%= form_with model: chapter, url: subject_chapter_path(@subject, chapter), method: :patch, local: true, data: { turbo: false } do |f| %>
                  <div class="mb-3">
                    <%= f.label :name, "Chapter Name", class: "form-label" %>
                    <%= f.text_field :name, class: "form-control", required: true %>
                  </div>
                  <div class="mb-3">
                    <%= f.label :description, "Chapter Description", class: "form-label" %>
                    <%= f.text_area :description, class: "form-control", rows: 3, required: true %>
                  </div>
                  <div class="mb-3">
                    <%= f.label :label, "Label", class: "form-label" %>
                    <%= f.select :label, options_for_select(Chapter::LABELS.map { |key, value| [value, key] }, selected: chapter.label), { include_blank: "No label" }, class: "form-select" %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <%= f.submit "Update Chapter", class: "btn btn-success" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5 my-4 bg-light rounded">
      <i class="bi bi-journal-bookmark fs-1 text-muted mb-3"></i>
      <p class="lead">No chapters found. Start by adding a new one!</p>
      <button type="button" class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#newChapterModal">
        Create First Chapter
      </button>
    </div>
  <% end %>

  <%= link_to "Back to Subjects", subjects_path, class: "btn btn-secondary mt-4", data: { turbo: false } %>

  <!-- New Chapter Modal -->
  <div class="modal fade" id="newChapterModal" tabindex="-1" aria-labelledby="newChapterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newChapterModalLabel">Create a New Chapter</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= form_with model: Chapter.new, url: subject_chapters_path(@subject), local: true, data: { turbo: false } do |f| %>
            <div class="mb-3">
              <%= f.label :name, "Chapter Name", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>
            <div class="mb-3">
              <%= f.label :description, "Chapter Description", class: "form-label" %>
              <%= f.label :alert, "maximum 50 character", class: "card-text-hint" %>
              <%= f.text_area :description, class: "form-control", rows: 3 %>
            </div>
            <div class="mb-3">
              <%= f.label :label, "Label", class: "form-label" %>
              <%= f.select :label, options_for_select(Chapter::LABELS.map { |key, value| [value, key] }), { include_blank: "No label" }, class: "form-select" %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <%= f.submit "Create Chapter", class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const searchForm = document.getElementById('search-form');
    let debounceTimer;

    searchInput.addEventListener('input', function() {
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(function() {
        searchForm.submit();
      }, 500);
    });
    if (!document.querySelector('link[href*="bootstrap-icons"]')) {
      const iconLink = document.createElement('link');
      iconLink.rel = 'stylesheet';
      iconLink.href = 'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css';
      document.head.appendChild(iconLink);
    }
  });
</script>

