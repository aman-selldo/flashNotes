<div class="container">
  <h2>Edit a Chapter </h2>

  <%= form_with model: [@chapter.subject, @chapter], local: true do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Chapter Name", class: "form-label"%>
      <%= f.text_field :name, class: "form-control", required: true%>     
    </div>
    <%= f.submit "Update Chapter", class: "btn btn-success"%>
    <%= link_to "Back", subject_chapters_path, class: "btn btn-secondary" %>
  <% end %>
</div>