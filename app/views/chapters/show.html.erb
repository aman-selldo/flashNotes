<div class="container">
  <h2>Paragraphs in <%= @chapter.name %></h2>

  <%= link_to "New Topic", new_subject_chapter_paragraph_path(@chapter.subject, @chapter), class: "btn btn-primary mb-3" %>

  <% if @paragraphs.present? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @paragraphs.each do |paragraph| %>
          <tr>
            <td><%= paragraph.title %></td>
            <td><%= truncate(paragraph.content, length: 100) %></td>
            <td>
              <%= link_to "Show", subject_chapter_paragraph_path(@chapter.subject, @chapter, paragraph), class: "btn btn-info btn-sm" %>
              <%= link_to "Edit", edit_subject_chapter_paragraph_path(@chapter.subject, @chapter, paragraph), class: "btn btn-warning btn-sm" %>
              <%= link_to "Delete", subject_chapter_paragraph_path(@chapter.subject, @chapter, paragraph), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No paragraphs found. Start by adding a new one!</p>
  <% end %>

</div>
