<h1>create a new chapter </h1>

<%= form_with model: [@subject, @chapter], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "chapter name", class: "form-label"%>
    <%= f.text_field :name, class: "form-control", required: true%>
  </div>
  <%= f.submit "create chapter", class: "btn btn-primary"%>
<% end %>