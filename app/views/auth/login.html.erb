<div style="height: 90vh;" class="container d-flex justify-content-center align-items-center">
  <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%;">
    <div class="card-body">
      <h3 class="card-title text-center fw-bold mb-3">Login</h3>

      <%= form_with(model: @user, url: login_path, class: "needs-validation", novalidate: true) do |f| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>

        <div class="d-grid">
          <%= f.submit "Login", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <p class="text-muted">
          Don't have an account?
          <%= link_to "Sign up", signup_path, class: "text-primary fw-semibold text-decoration-none" %>
        </p>
      </div>
    </div>
  </div>
</div>
