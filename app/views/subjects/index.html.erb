<h1>Your subject </h1>

<%= link_to "New Subject", new_subject_path, class: "btn btn-primary"%>

<% if @subjects.any? %>
  <ul>
    <% @subjects.each do |subject| %>
      <li>
        <%= link_to subject.name, subject_path(subject)%>
        <%= link_to "Edit", edit_subject_path(subject), class: "btn btn-warning"%>
        <%= link_to "Delete", subject, method: :delete, data: {confirm: "Are you sure ?"}, class: "btn btn-danger" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p> no subjects found <p>
<% end %>